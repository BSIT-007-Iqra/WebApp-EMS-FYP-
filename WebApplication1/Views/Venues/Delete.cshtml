        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <!-- Row -->
        <div class="row">
            <div>

                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Venue_Name)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Venue_Name)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Venue_Details)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Venue_Details)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Venue_Picture)
                    </dt>

                    <dd>
                        <img src="@Url.Content(Model.Venue_Picture)" height="100" width="100" />
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Venue_Email)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Venue_Email)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Venue_Contact)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Venue_Contact)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Venue_Location)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Venue_Location)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Venue_Price)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Venue_Price)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <button type="submit" class="btn btn-primary fa fa-trash"> Delete </button> 
                        <a class="btn btn-warning fa fa-arrow-circle-o-left" href="@Url.Action("Index","Venues")"> Back to List </a>
                    </div>
                }
            </div>
        </div>
        <!-- Row -->
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
</div>