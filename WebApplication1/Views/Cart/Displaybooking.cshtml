                            </div>
                            <hr>
                            @if (Session["cart"] != null && Session["cart1"] != null && total != 0 )
                            {
                                <center><div class="d-flex"><a class="btn primary-btn" href="/Cart/checkout" style="float:right">Checkout</a> </div></center>

                            }
                            else
                            {
                                <center>
                                    <div class="d-flex">
                                        <button type="button" class="btn primary-btn" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                            Checkout
