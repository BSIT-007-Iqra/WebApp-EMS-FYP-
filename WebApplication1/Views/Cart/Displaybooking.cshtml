<section class="cart_area">
    <div class="container">
        <div class="cart_inner">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">

                        <div class="table-main table-responsive">
                            <table class="table">

                                <tbody class="border2">
                                    @foreach (var item in pro)
                                    {
                                        rowno++;

                                        total += (decimal)item.Hall_Price;

                                        <tr rowspan="5">
                                            <td class="thumbnail-img">

                                                <img class="img-fluid pic-td" src="@Url.Content(item.Hall_Picture)" alt="" />

                                            </td>

                                            <td class="name-pr">
                                                <p class="p1">Name</p><br />
                                                <hr /><h5>
                                                    @item.Hall_Name
                                                </h5>

                                            </td>

                                            <td class="user-name">
                                                <p class="p1">Location</p><br /> <hr /><h5> @item.Hall_Location</h5>

                                            </td>
                                            <td class="price-pr">
                                                <p class="p1">Price</p><br /><hr /> <h5>Rs: @item.Hall_Price</h5>

                                            </td>

                                            <td class="price-pr">
                                                <p class="p1">Details</p><br /><hr />
