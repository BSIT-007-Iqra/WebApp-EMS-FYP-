@model IEnumerable<WebApplication1.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Login/Register</h1>
                <nav class="d-flex align-items-center">
                    <a href="/Home/index">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="/Customers/Index">Manage Profile</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
@foreach (var item in Model)
{
    <div class="container">
        <div class="row">
            <!-- Column -->
            <div class="col-lg-2 col-xlg-1 col-md-3">
                <img src="~/Images/cp2.jpg" height="100" width="200" />
            </div>
            <div class="col-lg-3 col-xlg-3 col-md-5">
                <div class="card ml-5">
                    <div class="card-body">
                        <center class="mt-4">
                            <img src="@Url.Content(item.Customer_Picture)" class="img-circle"
                                 height="200" width="180" style="border-radius:50%" />
                            <h4 class="card-title mt-2">@item.Customer_Name</h4>
                            <h6 class="card-subtitle" style="color:black">EMS User</h6>
                            <div class="row text-center justify-content-md-center">

                            </div>
                        </center>
                    </div>
                </div>
            </div>
            <!-- Column -->
            <!-- Column -->
            <div class="col-lg-5 col-xlg-9 col-md-7">
                <div class="card">
                    <!-- Tab panes -->
                    <div class="card-body">
                        <form class="form-horizontal form-material mx-2">
                            <div class="form-group">
                                <label class="col-md-8">Full Name</label>
                                <div class="col-md-8">
                                    <input type="text" placeholder="@item.Customer_Name"
                                           class="form-control form-control-line" readonly>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="example-email" class="col-md-8">Email</label>
                                <div class="col-md-8">
                                    <input type="email" placeholder="@item.Customer_Email"
                                           class="form-control form-control-line" name="example-email"
                                           id="example-email" readonly>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-8">Password</label>
                                <div class="col-md-8">
                                    <input type="text" value="@item.Customer_Password"
                                           class="form-control form-control-line" readonly>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-md-8">Phone No</label>
                                <div class="col-md-8">
                                    <input type="text" placeholder="@item.Customer_Contact"
                                           class="form-control form-control-line" readonly>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-sm-8">
                                    <a class="btn btn-primary fa fa-edit btn-lg" href="@Url.Action("Edit","Customers",new { id = item.Customer_ID  })"> Update </a> |
                                    <a class="btn btn-danger fa fa-trash btn-lg" href="@Url.Action("Delete","Customers",new { id = item.Customer_ID })"> Delete</a>

                                </div>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-xlg-1 col-md-3">
                <img src="~/Images/cp2.jpg" height="100" width="200" />
            </div>
            <!-- Column -->
        </div>
    </div>
}
<br />
<br /><!-- Row -->
