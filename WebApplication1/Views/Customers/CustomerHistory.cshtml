@using WebApplication1.Models
@using WebApplication1.Utils

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Model1 db = new Model1();
    int srno = 0;
}

<div class="container py-lg-4 py-md-3">
    <!-- block -->
    <br /><center><h1><b>Booking(s) History </b></h1></center>
    <br />
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10 ">
            <table class="table table-bordered table-hover">
                <tr class="bg-info">
                    <th>
                        Sr No#
                    </th>
                    <th>
                        Customer Name
                    </th>
                    <th>
                        Order Date
                    </th>
                    <th>
                        Order Status
                    </th>
                    
                    <th>
                        Payment Type
                    </th>
                    <th>Actions</th>
                </tr>

                @foreach (var item in db.Bookings.Where(x => x.Booking_Type == "Sale" && x.Booking_Status == "Booked"))
                {
                    if (item.Customer_FID == BaseHelper.customer.Customer_ID)
                    {
                        srno++;
                        <tr>
                            <td>
                                @srno
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer.Customer_Name)
                            </td>
                            <td>
                                @item.Event_Date.ToLongDateString()
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Booking_Status)
                            </td>
                            
                            <td>
                                @Html.DisplayFor(modelItem => item.Payment_Type)
                            </td>
                            <td><a class="btn btn-danger" href="@Url.Action("CancelOrder", "Bookings", new { id = item.Booking_ID })"> Cancel? </a>
                            <a class="btn btn-info" href="@Url.Action("Invoice", "Bookings", new { id = item.Booking_ID })"> Invoice </a></td>
                        </tr>
                    }
                }

            </table>
        </div>
    </div>
</div>
        <script type="text/javascript">
            function PrintFunction() {
                var print = document.getElementById('printArea');
                var b1 = document.getElementById('btn1');
                var b2 = document.getElementById('btn2');
                b1.style.display = 'none';
                b2.style.display = 'none';

                var printWindow = window.open('', '', 'height=400,width=800');
                printWindow.document.write('<html><head><title>DIV Contents</title>');
                printWindow.document.write('</head><body >');
                printWindow.document.write(print.innerHTML);
                printWindow.document.write('</body></html>');
                printWindow.document.close();
                setTimeout(function () {
                    printWindow.print();
                }, 500);
                b1.style.display = 'block';
                b1.style.display = 'block';
                return false;
            }
        </script>
