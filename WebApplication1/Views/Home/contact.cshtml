@using WebApplication1.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "Contact";
    Model1 db = new Model1(); 
    }

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Contact Us</h1>
                <nav class="d-flex align-items-center">
                    <a href="/hone/index">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="/home/contact">Contact</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<!--================Contact Area =================-->
<section class="contact_area section_gap_bottom">
    <div class="container">
        <div id="mapBox" class="mapBox" data-lat="40.701083" data-lon="-74.1522848" data-zoom="13" data-info="PO Box CT16122 Collins Street West, Victoria 8007, Australia."
             data-mlat="40.701083" data-mlon="-74.1522848">
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="contact_info">
                    <div class="info_item d-inline-block">
                        <i class="lnr lnr-home"></i>
                        <h6>@db.Website_Details.Select(x => x.Website_Address).FirstOrDefault()</h6>
                        <p>Santa monica bullevard</p>
                    </div>
                    <div class="info_item d-inline-block">
                        <i class="lnr lnr-phone-handset"></i>
                        <h6><a href="#">@db.Website_Details.Select(x => x.Website_Contact).FirstOrDefault()</a></h6>
                        <p>Mon to Fri 9am to 6 pm</p>
                    </div>
                    <div class="info_item d-inline-block">
                        <i class="lnr lnr-envelope"></i>
                        <h6><a href="#">@db.Website_Details.Select(x => x.Website_Email).FirstOrDefault()</a></h6>
                        <p>Send us your query anytime!</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
               
                <form class="row contact_form" action="/home/Contact" method="post" id="contactForm" novalidate="novalidate">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your name'">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter email address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter email address'">
                        </div>

                        <div class="form-group">
                            <textarea class="form-control" name="subject" id="message" rows="1" cols="4" placeholder="Enter Message" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Message'" required=""></textarea>
                        </div>
                    </div>
                   <center><label style="color:darkred;font:50px"> @TempData["Text"]</label></center> 
                    <div class="col-md-12 text-right">
                        <button type="submit" value="submit" class="btn primary-btn">Send Message</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<!--================Contact Area =================-->
<script type="text/javascript">
    window.onload = function () { window.scrollBy(0, 230); }
</script>