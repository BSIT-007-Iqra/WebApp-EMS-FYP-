@using WebApplication1.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Model1 db = new Model1();
}

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Packages Category </h1>
                <nav class="d-flex align-items-center">
                    <a href="/home/index">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="/home/venue">Packages<span class="lnr lnr-arrow-right"></span></a>

                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<div class="container">
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12">

            <!-- End Filter Bar -->
            <!-- Start Best Seller -->
            <section class="lattest-product-area pb-40 category-list">
                <div class="container" style="margin-top:2rem">
                    <div class="row">
                        @foreach (var item in db.Packages)
                        {
                            <!-- single product -->
                            <div class="col-lg-4 col-md-4">
                                <div class="single-product card" style="border-radius: 8px; box-shadow: 0 4px 4px 0 #808080; border: dashed; border-color: #c9c9c9;">
                                    <div class="product-details card-body">

                                        <h3 class="fun" onclick="window.location.href='@Url.Action("Hall","Home",new {id = item.Package_ID})'">

                                            <i class="fa fa-home" style="margin-right:1rem"></i>@item.Package_Name <small><br /><i class="fa fa-star" style="color: #e88e4d; margin-left: 2rem"></i><i class="fa fa-star" style="color: #e88e4d; "></i><i class="fa fa-star" style="color: #e88e4d;"></i><i class="fa fa-star" style="color: #e88e4d;"></i><i class="fa fa-star" style="color: #e88e4d;"></i></small>
                                        </h3>
                                        <center>
                                            <div class="price card-footer">
                                                <h6 style="color: black; font-family: poppins,sans-serif; text-transform: capitalize;font-style:normal">Starting at PKR : <b>@item.Packages_Price</b></h6>

                                            </div>
                                        </center>
                                        <p style=" color: #4B3047;cursor:pointer" onclick="window.location.href='@Url.Action("Hall","Home",new {id = item.Package_ID})'">
                                            @if (item.Package_Details.Length < 90)
                                            {
                                                @item.Package_Details }
                                            else
                                            {
                                                @item.Package_Details.Substring(0, 60)<span>......</span>}
                                        </p>

                                        <hr />
                                        <p>Hall Details</p>
                                        <img class="img-fluid" src="@Url.Content(item.Hall.Hall_Picture)" style="border-radius: 8px; box-shadow: 0 4px 8px 0 #B08EAD;cursor:pointer; height:200px;width:100%" alt="">
                                        <center>
                                            <h4 style=" overflow: hidden; white-space: nowrap; text-overflow: ellipsis;margin-left:3px">
                                                <i class="" style="margin-right: 1rem; color: #4B3047;"></i> @item.Hall.Hall_Name
                                            </h4>
                                        </center><h5 style=" overflow: hidden; white-space: nowrap; text-overflow: ellipsis;margin-left:3px">
                                            <i class="fa fa-map-marker" style="margin-right: 1rem; color: #4B3047;"></i> @item.Hall.Hall_Location
                                        </h5>
                                        <center>
                                            <div class="price card-footer">
                                                <h6 style="color: black; font-family: poppins,sans-serif; text-transform: capitalize;font-style:normal">Starting at PKR : <b>@item.Hall.Hall_Price</b></h6>

                                            </div>
                                        </center>
                                        
                                        <hr />
                                        <p>Services Details</p>
                                        <img class="img-fluid" src="@Url.Content(item.Service.Service_Picture)" style="border-radius: 8px; box-shadow: 0 4px 8px 0 #B08EAD;cursor:pointer; height:200px;width:150%" alt="">
                                        <center>
                                            <h4 style=" overflow: hidden; white-space: nowrap; text-overflow: ellipsis;margin-left:3px">
                                                <i class="" style="margin-right: 1rem; color: #4B3047;"></i> @item.Service.Service_Name
                                            </h4>
                                        </center><h5 style=" overflow: hidden; white-space: nowrap; text-overflow: ellipsis;margin-left:3px">
                                            <i class="" style="margin-right: 1rem; color: #4B3047;"></i>Service Category: @item.Service.Sub_ServiceCategory.Sub_category_Name
                                        </h5>
                                        <center>
                                            <div class="price card-footer">
                                                <h6 style="color: black; font-family: poppins,sans-serif; text-transform: capitalize;font-style:normal">Starting at PKR : <b>@item.Service.Service_Price</b></h6>

                                            </div>
                                        </center>
                                        
                                        <hr />
                                        <div class="prd-bottom justify-content-center" style="margin-left:1rem">

                                            <a href="@Url.Action("Addtobooking2","Cart",new {id = item.Package_ID})" class="social-info">
                                                <span class="ti-bag"></span>
                                                <p class="hover-text">Book Now</p>
                                            </a>

                                            <a href="@Url.Action("Hall_Details","Home",new {id = item.Hall_FID})" class="social-info">
                                                <span class="lnr lnr-move"></span>
                                                <p class="hover-text">Hall View</p>
                                            </a>
                                            <a href="@Url.Action("Service_Details","Home",new {id = item.Service_FID})" class="social-info">
                                                <span class="lnr lnr-move"></span>
                                                <p class="hover-text">Service View</p>
                                            </a>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <!-- single product -->
                        }

                    </div>
                </div>
            </section>
            <!-- End Best Seller -->
            <!-- Start Filter Bar -->
            @*<div class="filter-bar d-flex flex-wrap align-items-center">
                    <div class="sorting mr-auto">
                        <select>
                            <option value="1">Show 12</option>
                            <option value="1">Show 12</option>
                            <option value="1">Show 12</option>
                        </select>
                    </div>
                    <div class="pagination">
                        <a href="#" class="prev-arrow"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a>
                        <a href="#" class="active">1</a>
                        <a href="#">2</a>
                        <a href="#">3</a>
                        <a href="#" class="dot-dot"><i class="fa fa-ellipsis-h" aria-hidden="true"></i></a>
                        <a href="#">6</a>
                        <a href="#" class="next-arrow"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
                    </div>
                </div>*@
            <!-- End Filter Bar -->
        </div>
    </div>
</div>
<script type="text/javascript">
    window.onload = function () { window.scrollBy(0, 230); }
</script>