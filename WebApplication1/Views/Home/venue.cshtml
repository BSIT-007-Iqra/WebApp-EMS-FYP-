@using WebApplication1.Models
@model IEnumerable<WebApplication1.Models.Venue>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Model1 db = new Model1();
    //var query1 = db.Venues.Where(x => x.Venue_Name == null).OrderByDescending(x => x.Views.Count()).ToList();

}

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Venues page</h1>
                <nav class="d-flex align-items-center">
                    <a href="/home/index">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="/home/venues">Venue</a>

                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<div class="container">
    <div class="row">
        <div class="col-xl-3 col-lg-4 col-md-5">

        </div>

        <!-- Start Best Seller-->
        <section class="lattest-product-area pb-40 category-list">
            <div class="row">
                <!-- single product -->

                @foreach (var item in db.Venues)
                {
                    if (ViewData["veuneid"] == null || item.Venue_ID == (int)ViewData["veuneid"])
                    {

                        <div class="col-lg-4 col-md-6">
                            <div class="container">
                                <div class="single-product">
                                    <img class="img-fluid" src="@Url.Content(item.Venue_Picture)" alt="">

                                    <div class="product-details">

                                        <h3>
                                            <b>@item.Venue_Name</b>
                                        </h3>

                                        <div class="price">

                                            <h6>
                                                <span>
                                                    <b style="color:black;font-size:15px">Starting From:</b>  $@item.Venue_Price

                                                </span>
                                            </h6>

                                        </div>

                                        <div class="prd-bottom">

                                            <a href="@Url.Action("Hall","Home",new {id =item.Venue_ID })" class="social-info">
                                                <span class="ti-bag"></span>
                                                <p class="hover-text" style="padding-left:15px">Booking </p>
                                            </a>
                                            <a href="/home/Hall" class="social-info">
                                                <span class="lnr lnr-move"></span>
                                                <p class="hover-text" style="padding-left:25px">View </p>
                                            </a>

                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- single product -->
                    }
                }

            </div>

        </section>
    </div>
</div>
<!-- End Best Seller -->
