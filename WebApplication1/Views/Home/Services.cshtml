@using WebApplication1.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Model1 db = new Model1();
    int count = 0;
}

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Services Category </h1>
                <nav class="d-flex align-items-center">
                    <a href="/home/index">Home<span class="lnr lnr-arrow-right"></span></a>
                    
                    <a href="/home/Services">Service Category</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<div class="container">
    <div class="row">
        <div class="col-xl-3 col-lg-4 col-md-5">
          
            <div class="sidebar-filter mt-50">
                <div class="top-filter-head">Filters</div>
                <div class="idebar-filter">
                   
                    <div class="sidebar-categories mt-50">
                        @*<div class=" head">Browse Categories</div>*@
                        <div class="sidebar-categories">
                            <div class="head" onclick="window.location.href='@Url.Action("Services","Home",new { id = "null"})'">Service Categories<span class="number text-dark" style="margin-left:.5rem">(@(db.Service_Category.Count()))</span></div>
                            <ul class="main-categories">


                                <li class="main-nav-list">
                                    @*<a data-toggle="collapse" href="" aria-expanded="false" aria-controls="fruitsVegetable">
            <span class="lnr lnr-arrow-right"></span>Service Categories<span class="number text-dark">(@(db.Service_Category.Count()))</span>
        </a>*@@*<a data-toggle="collapse" href="" aria-expanded="false" aria-controls="fruitsVegetable">
            <span class="lnr lnr-arrow-right"></span>Service Categories<span class="number text-dark">(@(db.Service_Category.Count()))</span>
        </a>*@
                                @foreach (var c in db.Service_Category)
                                {
                                    count++;
                                    <center>
                                        <a data-toggle="collapse" href="#fruitsVegetable" aria-expanded="false" aria-controls="fruitsVegetable">
                                            <span class="lnr lnr-arrow-right"></span><b>@c.ServiceCategory_Name</b><i class="fa fa-arrow-down"></i><span class="number text-dark">(@(c.Sub_ServiceCategory.Count()))</span>
                                        </a>
                                    </center>
                                    foreach (var sub in c.Sub_ServiceCategory.Where(x => !x.Sub_category_Name.Contains("Course")))
                                    {
                                        <ul class="collapse" id="fruitsVegetable" data-toggle="collapse" aria-expanded="false" aria-controls="fruitsVegetable">
                                            <li class="main-nav-list child"><a href="@Url.Action("Services", "home", new {id=sub.SubCategory_ID})">@sub.Sub_category_Name<span class="number text-dark">(@(sub.Services.Count()))</span></a></li>

                                        </ul>
                                    }
                                }
                                </li>


                            </ul>
                        </div>
                    </div>
                   
                </div><hr/>
                <div class="common-filter">
                    <div class="top-filter-head" style="margin-top:1rem">Cancellation Policy</div>
                    <form action="#">
                        <ul>
                            <li class="filter-list"><input class="pixel-radio" type="radio" id="apple" name="brand"><label for="apple">Refundable</label></li>
                            <li class="filter-list"><input class="pixel-radio" type="radio" id="asus" name="brand"><label for="asus">Non-Refundable</label></li>
                            @*<li class="filter-list"><input class="pixel-radio" type="radio" id="gionee" name="brand"><label for="gionee">Gionee<span>(19)</span></label></li>
                    <li class="filter-list"><input class="pixel-radio" type="radio" id="micromax" name="brand"><label for="micromax">Micromax<span>(19)</span></label></li>
                    <li class="filter-list"><input class="pixel-radio" type="radio" id="samsung" name="brand"><label for="samsung">Samsung<span>(19)</span></label></li>*@
                        </ul>
                    </form>
                </div><hr />
                <div class="common-filter">
                    <div class="top-filter-head">Capacity</div>
                    <form action="#">
                        <ul>
                            <li class="filter-list"><input class="pixel-radio" type="radio" id="black" name="color"><label for="black">Black<span>(29)</span></label></li>
                            <li class="filter-list">
                                <input class="pixel-radio" type="radio" id="balckleather" name="color"><label for="balckleather">
                                    Black
                                    Leather<span>(29)</span>
                                </label>
                            </li>
                            <li class="filter-list">
                                <input class="pixel-radio" type="radio" id="blackred" name="color"><label for="blackred">
                                    Black
                                    with red<span>(19)</span>
                                </label>
                            </li>
                            <li class="filter-list"><input class="pixel-radio" type="radio" id="gold" name="color"><label for="gold">Gold<span>(19)</span></label></li>
                            <li class="filter-list"><input class="pixel-radio" type="radio" id="spacegrey" name="color"><label for="spacegrey">Spacegrey<span>(19)</span></label></li>
                        </ul>
                    </form>
                </div><hr/>
                <div class="common-filter">
                    <div class="top-filter-head">Budget</div>
                    <div class="price-range-area">
                        <div id="price-range"></div>
                        <div class="value-wrapper d-flex">
                            <div class="price">Price:</div>
                            <span>$</span>
                            <div id="lower-value"></div>
                            <div class="to">to</div>
                            <span>$</span>
                            <div id="upper-value"></div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
            <div class="col-xl-9 col-lg-8 col-md-7">

                <!-- End Filter Bar -->
                <!-- Start Best Seller -->
                <section class="lattest-product-area pb-40 category-list">
                    <div class="container" style="margin-top:2rem">
                        <div class="row">
                            @foreach (var a in db.Services)
                            {
                                if (ViewData["serviceid"] == null || a.SubCategory_FID == (int)ViewData["serviceid"])
                                {
                                    <div class="col-lg-6 col-md-6">
                                        <div class="container">
                                            <div class="single-product">
                                                <img class="img-fluid" src="@Url.Content(a.Service_Picture)" alt="">
                                                <div class="product-details">
                                                    <h4><span style="color: #B08EAD ;margin-left:1rem;  font-size:large; font-weight: 600"><label style="margin-left:5px;font-family:'Fira';font-size:x-large;font-weight:600;color:black">Name:</label> @a.Service_Name</span></h4>
                                                    <div class="price">
                                                        @*<h6>$@a.Hall_Price</h6>*@
                                                        <h6><span style="color: #B08EAD ;margin-left:1rem;  font-size: large; font-weight: 600"><label style="margin-left:5px;font-family:'Fira';font-size:medium;font-weight:600;color:black">Price:</label> @a.Service_Price</span></h6>

                                                    </div>
                                                    <div class="prd-bottom">

                                                        <a href="@Url.Action("Service_Details", "Home")" class="social-info">
                                                            <span class="lnr lnr-move"></span>
                                                            <p class="hover-text">View Details</p>
                                                        </a>

                                                        <a href="@Url.Action("Addtobooking1", "Cart", new { id = a.Service_ID })" class="social-info">
                                                            <span class="ti-bag"></span>
                                                            <p class="hover-text">Book Now</p>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </section>
                <!-- End Best Seller -->
                <!-- Start Filter Bar -->
