@using WebApplication1.Models
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Model1 db = new Model1();
}

<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Halls Category </h1>
                <nav class="d-flex align-items-center">
                    <a href="/home/index">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="/home/venue">Venues<span class="lnr lnr-arrow-right"></span></a>
                    <a href="/home/hall">Hall Category</a>
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- End Banner Area -->
<div class="container">
    <div class="row">
        <div class="col-xl-3 col-lg-4 col-md-5">
          
            <div class="sidebar-filter mt-50">
                <div class="top-filter-head">Filters</div>
                <div class="idebar-filter">
                   
                        <div class="sidebar-categories mt-50">
                            @*<div class=" head">Browse Categories</div>*@
                            <ul class="main-categories">
                                <li class="main-nav-list">
                                    <a data-toggle="collapse" href="@Url.Action("Hall","Home",new { id = "null"})" aria-expanded="false" aria-controls="fruitsVegetable">
                                        <span class="lnr lnr-arrow-right"></span><b class="head text-bg-dark">All Venues</b><span class="number text-dark">(@db.Halls.Count())</span><i class="fa fa-arrow-down" style="margin-left:10px"></i>
                                    </a>
                                    @foreach (var item in db.Venues)
                                    {
                                        <ul class="" id="fruitsVegetable" data-toggle="collapse" aria-expanded="false" aria-controls="fruitsVegetable">
                                            <li class="main-nav-list child"><a href="@Url.Action("Hall", "Home", new { id = item.Venue_ID })"><b>@item.Venue_Name</b><span class="number text-dark">(@item.Halls.Count())</span><i class="fa fa-arrow-right" style="margin-left:10px"></i></a></li>

                                        </ul>
                                    }
                                </li>
                            </ul>
                        </div>
                   
                </div><hr/>
                <div class="common-filter">
                    <div class="top-filter-head" style="margin-top:1rem">Cancellation Policy</div>
                    <form action="#">
                        <ul>
                            <li class="filter-list"><input class="pixel-radio" type="radio" id="apple" name="brand"><label for="apple">Refundable</label></li>
                            <li class="filter-list"><input class="pixel-radio" type="radio" id="asus" name="brand"><label for="asus">Non-Refundable</label></li>
                            @*<li class="filter-list"><input class="pixel-radio" type="radio" id="gionee" name="brand"><label for="gionee">Gionee<span>(19)</span></label></li>
                    <li class="filter-list"><input class="pixel-radio" type="radio" id="micromax" name="brand"><label for="micromax">Micromax<span>(19)</span></label></li>
                    <li class="filter-list"><input class="pixel-radio" type="radio" id="samsung" name="brand"><label for="samsung">Samsung<span>(19)</span></label></li>*@
                        </ul>
                    </form>
                </div><hr />
                <div class="common-filter">
                    <div class="top-filter-head">Capacity</div>
                    <form action="#">
                        <ul>
                            <li class="filter-list"><input class="pixel-radio" type="radio" id="black" name="color"><label for="black">Black<span>(29)</span></label></li>
                            <li class="filter-list">
                                <input class="pixel-radio" type="radio" id="balckleather" name="color"><label for="balckleather">
                                    Black
                                    Leather<span>(29)</span>
                                </label>
                            </li>
                            <li class="filter-list">
                                <input class="pixel-radio" type="radio" id="blackred" name="color"><label for="blackred">
                                    Black
                                    with red<span>(19)</span>
                                </label>
                            </li>
                            <li class="filter-list"><input class="pixel-radio" type="radio" id="gold" name="color"><label for="gold">Gold<span>(19)</span></label></li>
                            <li class="filter-list"><input class="pixel-radio" type="radio" id="spacegrey" name="color"><label for="spacegrey">Spacegrey<span>(19)</span></label></li>
                        </ul>
                    </form>
                </div><hr/>
                <div class="common-filter">
                    <div class="top-filter-head">Budget</div>
                    <div class="price-range-area">
                        <div id="price-range"></div>
                        @foreach (var sub in db.Halls)
                        {
                        <div class="value-wrapper d-flex">
                            <div class="price">@sub.Hall_Price :</div>
                            <span>$</span>
                            <div id="lower-value"></div>
                            <div class="to">to</div>
                            <span>$</span>
                            <div id="upper-value"></div>
                        </div>

                        }
                    </div>
                </div>
            </div>
            </div>
            <div class="col-xl-9 col-lg-8 col-md-7">

                <!-- End Filter Bar -->
                <!-- Start Best Seller -->
                <section class="lattest-product-area pb-40 category-list">
                    <div class="container" style="margin-top:2rem">
                        <div class="row">
                            @foreach (var a in db.Halls)
                            {
                                if (ViewData["hallid"] == null || a.Venue_FID == (int)ViewData["hallid"])
                                {
                                    <div class="col-lg-6 col-md-6">
                                        <div class="container">
                                            <div class="single-product">
                                                <img class="img-fluid" src="@Url.Content(a.Hall_Picture)" alt="">
                                                <div class="product-details">
                                                    <h4><span style="color: #B08EAD ;margin-left:1rem;  font-size:large; font-weight: 600"><label style="margin-left:5px;font-family:'Fira';font-size:x-large;font-weight:600;color:black">Name:</label> @a.Hall_Name</span></h4>
                                                    <div class="price">
                                                        @*<h6>$@a.Hall_Price</h6>*@
                                                        <h6><span style="color: #B08EAD ;margin-left:1rem;  font-size: large; font-weight: 600"><label style="margin-left:5px;font-family:'Fira';font-size:medium;font-weight:600;color:black">Price:</label> @a.Hall_Price</span></h6>

                                                    </div>
                                                    <div class="prd-bottom">

                                                        <a href="@Url.Action("Hall_Details", "Home")" class="social-info">
                                                            <span class="lnr lnr-move"></span>
                                                            <p class="hover-text">View Details</p>
                                                        </a>

                                                        <a href="@Url.Action("Addtobooking", "Cart", new { id = a.Hall_ID })" class="social-info">
                                                            <span class="ti-bag"></span>
                                                            <p class="hover-text">Book Now</p>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </section>
                <!-- End Best Seller -->
                <!-- Start Filter Bar -->
                @*<div class="filter-bar d-flex flex-wrap align-items-center">
                <div class="sorting mr-auto">
                    <select>
                        <option value="1">Show 12</option>
                        <option value="1">Show 12</option>
                        <option value="1">Show 12</option>
                    </select>
                </div>
                <div class="pagination">
                    <a href="#" class="prev-arrow"><i class="fa fa-long-arrow-left" aria-hidden="true"></i></a>
                    <a href="#" class="active">1</a>
                    <a href="#">2</a>
                    <a href="#">3</a>
                    <a href="#" class="dot-dot"><i class="fa fa-ellipsis-h" aria-hidden="true"></i></a>
                    <a href="#">6</a>
                    <a href="#" class="next-arrow"><i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
                </div>
            </div>*@
                <!-- End Filter Bar -->
            </div>
        </div>
</div>
