
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<section class="login_box_area section_gap">
    <div class="container">
        <div class="row">

            <div class="col-lg-12">
                <div class="login_form_inner">

                    <h3>Verify your Code</h3>
                    <form class="row login_form" action="/Admins/CodeVerify" method="post">
                        <div class="col-md-12 form-group">
                            <input type="number" name="code" required class="form-control" placeholder="Enter your code" />

                        </div>
                        <div class="col-md-12 form-group">
                            <label><b style="color:darkred;font-size:20px">@TempData["error"]</b></label>
                        </div>
                        <div class="col-md-12 form-group">
                            <input type="submit" value="Submit" class="primary-btn" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

